<%= form_tag '/contacts', method: :post do %>
<div>
  <%= label_tag :first_name, "First Name:" %>
  <%= text_area_tag :first_name  %>
</div>
<div>
  <%= label_tag :last_name, "Last Name:" %>
  <%= text_area_tag :last_name  %>
</div>
<div>
  <%= label_tag :email, "Email Address:" %>
  <%= text_area_tag :email  %>
</div>
<div>
  <%= label_tag :phone, "Phone Number:" %>
  <%= text_area_tag :phone  %>
</div>
<div>
  <%= label_tag :middle_name, "Middle Name:" %>
  <%= text_area_tag :middle_name  %>
</div>
<div>
  <%= label_tag :bio, "Bio:" %>
  <%= text_area_tag :bio  %>
</div>
<div>
  <%= submit_tag "Update Contacts" %>
</div>
<% end %>